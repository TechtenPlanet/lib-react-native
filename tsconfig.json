{
  "compilerOptions": {
    "allowJs": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es6"],
    "module": "commonjs",
    "noEmit": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "esnext",
    "noFallthroughCasesInSwitch": true,
    "noImplicitAny": false,
    "noImplicitReturns": false,
    "noUnusedParameters": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "baseUrl": "./"  /*Base directory to resolve non-absolute module names. */,
    "paths": {
      "lib_api": ["./src/api"],
      "lib_actions": ["./src/actions"],
      "lib_animations": ["./src/animations"],
      "lib_assets": ["./src/assets"],
      "lib_class": ["./src/class"],
      "lib_cloud": ["./src/cloud"],
      "lib_components": ["./src/components"],
      "lib_forms": ["./src/forms"],
      "lib_form_components": ["./src/forms/components"],
      "lib_contexts": ["./src/contexts"],
      "lib_constants": ["./src/constants"],
      "lib_security": ["src/security"],
      "lib_data": ["./src/data"],
      "lib_hooks": ["./src/hooks"],
      "lib_images": ["./src/assets/images"],
      "lib_mocks": ["./src/mocks"],
      "lib_models": ["./src/models"],
      "lib_modals": ["./src/modals"],
      "lib_navigation": ["./src/navigation"],
      "lib_screens": ["./src/screens"],
      "lib_services": ["./src/services"],
      "lib_stores": ["./src/stores"],
      "lib_styles": ["./src/styles"],
      "lib_types": ["./src/types"],
      "lib_helpers": ["src/helpers"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js",
    "dist",
    "src/**/*.test.tsx",
    "src/**/*.stories.tsx"
  ]
}
